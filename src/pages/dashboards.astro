---
import Layout from '../layouts/Layout.astro'
import Container from '../components/Container.astro';
import BlogPostsList from '../components/BlogPostsList.astro';

const posts = (await Astro.glob('./blog/*.{md,mdx}')).sort(
	(a, b) => new Date(b.frontmatter.publishedAt).valueOf() - new Date(a.frontmatter.publishedAt).valueOf()
);

---

<style>
  .home-hero-text__container {
    padding: 5vh 0;
  }
  h1 {
    text-align: center;
  }
</style>

<Layout
description="test"
title="Lista de dashboards"
>
  <Container>
    <div class="home-hero-text__container">
      <h1 class="text-2xl font-medium tracking-tight sm:text-2xl lg:text-2xl">Lista de dashboards</h1>
    </div>
    <BlogPostsList posts={posts}/>
  </Container>
</Layout>
